@model IEnumerable<ShoppingCart.Web.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = "Kraggle | Order";
}

<div class="container-fluid">
    <h3>Orders</h3>
    <hr />
    <a href="/Order/OrderItems" class="btn btn-outline-info btn-sm">New Order</a>
    <br /><br />
    @{ 
        <div class="container-fluid">
            <div class="row">
                @if (Model != null)
                {
                    foreach (var orders in Model)
                    {
                        <partial name="PartialView/_OrderList" model="orders" />
                    }
                }
                else
                {
                    <p>No Orders Bro!</p>
                }
            </div>
        </div>
    }
</div>

